{
  "name": "droe-lang-site",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:css && eleventy",
    "build:css": "tailwindcss -i ./src/input.css -o ./docs/style.css",
    "dev": "concurrently \"tailwindcss -i ./src/input.css -o ./docs/style.css --watch\" \"eleventy --serve\"",
    "build:watch": "tailwindcss -i ./src/input.css -o ./docs/style.css --watch",
    "postinstall": "npm run build:css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  }
}
